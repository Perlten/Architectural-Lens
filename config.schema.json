{
    "$schema": "http://json-schema.org/schema",
    "type": "object",
    "required": [
        "name",
        "rootFolder",
        "views"
    ],
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the project"
        },
        "rootFolder": {
            "type": "string",
            "description": "Point to the root package of the project"
        },
        "SaveLocation": {
            "type": "string",
            "description": "The folder to which the diagrams should be saved in. If the folder does not exists it will be created",
            "default": "./diagrams/"
        },
        "views": {
            "type": "object",
            "description": "Defines the views available",
            "patternProperties": {
                ".*": {
                    "description": "The name of the view",
                    "type": "object",
                    "properties": {
                        "views": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "ignoreModules": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Defines the modules to ignore"
                        }
                    }
                }
            }
        }
    }
}