{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI Render",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/cli_interface.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "render",
                "--config-path",
                "${input:config_path}"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "CLI help",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/cli_interface.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--help"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "config_path",
            "description": "What config would you like to run",
            "options": [
                "${workspaceFolder}/test_projects/test_project/mt_config.json",
                "${workspaceFolder}/test_projects/test_project/test.json",
            ],
            "default": "${workspaceFolder}/test_projects/test_project/mt_config.json",
        }
    ]
}